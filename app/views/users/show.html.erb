<p id="notice">
 <%= notice %> 
</p>

<div class="col-lg-3">
<h1>User info</h1>
  <%= attachment_image_tag @user, :profile_image, :fill, 120, 120, format: 'jpeg', fallback: "no_image.jpg" %> 
  <p>name <%= @user.name %></p>
  <p>introduction <%= @user.introduction %></p>
  <% if @user.id === current_user.id %>
    <%= link_to "Setting", edit_user_path(@user) %>
  <% else %>
    <%= link_to "Setting", user_path(current_user) %>
  <% end %>

<h1>New book</h1>
  <%= form_for(@book) do |f| %> 
    <label for="booktitle">Title</label><br>
    <%= f.text_field :title %><br>
    <label for="bookbody">Opinion</label><br>
    <%= f.text_area :body %><br>
    <%= f.submit "Create Book" %>
  <% end %>
</div>

<div class="container"> 
  <div class="row">  
  <div class="col-lg-9">
  
<h1>Books</h1>
 <table class="table table-striped">
    <tr>
      <th></th>
      <th>Title</th>
      <th>Opinion</th>
    </tr>
    <tr>
      <% @books.each do |book| %>
        <tr>
          <td>
            <%= link_to user_path(book.user) %>
            <%= attachment_image_tag @user, :profile_image, :fill, 60, 60, format: 'jpeg', fallback: "no_image.jpg" %>
          </td>
          <td>
            <%= link_to book.title, book_path(book.id) %>
          </td>
          <td>
            <%= book.body %>
          </td>
        </tr>
      <% end %>
    </tr>
  </table>
</table>
  </div>
