<h1>User info</h1>
  
  <%= attachment_image_tag @user, :profile_image, :fill, 60, 60, format: 'jpeg', class: "img-circle pull-left profile-img", fallback: "no_image.jpg" %> 
  <p>name <%= current_user.name %></p>
  <p>introduction <%= current_user.introduction %></p>
  <% if @user.id == current_user.id %>
      <p><%= link_to "Setting", edit_user_path(@user), class: "pull-right" %></p>
  <% end %>

<h1>New book</h1>
  <%= form_for(@book) do |f| %> 
    <label for="booktitle">Title</label><br>
    <%= f.text_field :title %><br>
    <label for="bookbody">Opinion</label><br>
    <%= f.text_area :body %><br>
    <%= f.submit "Create Book" %>
  <% end %>

<h1>Books</h1>
 <table>
    <tr>
      <th></th>
      <th>Title</th>
      <th>Opinion</th>
    </tr>
    <tr>
      <% @books.each do |book| %>
        <tr>
          <td>
              <%= attachment_image_tag @user, :profile_image, :fill, 60, 60, format: 'jpeg', class: "img-circle pull-left profile-img", fallback: "no_image.jpg" %> 
          </td>
          <td>
            <%= link_to book.title, book_path(book.id) %>
          </td>
          <td>
            <%= book.body %>
          </td>
        </tr>
      <% end %>
    </tr>
  </table>
