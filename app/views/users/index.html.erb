<h1>User info</h1>

<%= attachment_image_tag current_user, :profile_image, :fill, 60, 60, format: 'jpeg', class: "img-circle pull-left profile-img", fallback: "no_image.jpg" %> 

<p>name <%= current_user.name %></p>

<p>introduction <%= current_user.introduction %></p>

<p>
  <%= link_to 'Setting', edit_user_path(current_user.id) %>
</p>

<h1>New book</h1>
<%= form_for(@book) do |f| %> 
  <label for="booktitle">Title</label><br>
  <%= f.text_field :title %><br>
  <label for="bookbody">Opinion</label><br>
  <%= f.text_area :body %><br>
  <%= f.submit "Create Book" %>
<% end %>

<h1>Users</h1>
<table>
    <tr>
      <th>image</th>
      <th>name</th>
    </tr>
    <tr>
      <% @users.each do |user| %>
        <tr>
          <td>
            <%= attachment_image_tag user, :profile_image, :fill, 60, 60, format: 'jpeg', class: "img-circle pull-left profile-img", fallback: "no_image.jpg" %> 
          </td>
          <td>
            <%= user.name %>
          </td>
          <td>
            <%= link_to "show", user_path(user.id) %>
          </td>
        </tr>
      <% end %>
    </tr>
</table>