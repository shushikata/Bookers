<h2>New Book</h2>

<table>
    <tr>
      <th>Title</th>
      <th>Opinion</th>
    </tr>
    <tr>
      <% @books.each do |book| %>
        <tr>
          <td>
            <%= book.title %>
          </td>
          <td>
            <%= book.body %>
          </td>
        </tr>
      <% end %>
    </tr>
</table>


<%= form_for(@book) do |f| %> 
  <label for="booktitle">Title</label><br>
  <%= f.text_field :title %><br>
  <label for="bookbody">Opinion</label><br>
  <%= f.text_area :body %><br>
  <%= f.submit 'Create Book' %>
<% end %>