<% if @book.errors.any? %>
  <h3 class="error_message">error prohibited this book from being saved:</h3>
  <br>
    <p class="error_message">can't be blank</p>
  </br>
<% end %>

<h2>New Book</h2>

<table>
    <tr>
      <th>Title</th>
      <th>Opinion</th>
    </tr>
    <tr>
      <% @books.each do |book| %>
        <tr>
          <td>
            <%= link_to book.title, book_path(book) %>
          </td>
          <td>
            <%= book.body %>
          </td>
        </tr>
      <% end %>
    </tr>
</table>


<%= form_for(@book) do |f| %> 
  <label for="booktitle">Title</label><br>
  <%= f.text_field :title %><br>
  <label for="bookbody">Opinion</label><br>
  <%= f.text_area :body %><br>
  <%= f.submit "Create Book" %>
<% end %>